<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 生产环境安全配置：仅信任系统 CA，禁止明文流量 -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- 仅信任系统预装的 CA 证书 -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- 如果需要调试，可以在 debug 构建中启用用户证书 -->
    <!-- 
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
    -->
</network-security-config>
